<resources>

    <!-- Base application theme. -->
    <style name="FootballppTheme" parent="FootballppTheme.Base">

    </style>

    <!--Customize here the subject of your application-->
    <style name="FootballppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.AppCompat.Light</item>
        <item name="actionModeStyle">@style/AppBaseThemeMaterial.ActionMode</item>
    </style>

    <style name="AppBaseThemeMaterial.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/secondary_text</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="FootballppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FootballppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FootballppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
