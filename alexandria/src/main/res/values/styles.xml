<resources>

    <!-- Base application theme. -->
     <style name="AlexandriaAppTheme" parent="AlexandriaTheme.Base">

    </style>

    <!--Customize here the subject of your application-->
    <style name="AlexandriaTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.AppCompat.Light</item>
        <item name="actionModeStyle">@style/AppBaseThemeMaterial.ActionMode</item>
    </style>

    <style name="AppBaseThemeMaterial.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/secondary_text</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AlexandriaAppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
